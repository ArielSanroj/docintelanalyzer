# DocsReview RAG Environment Variables Template
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=DocsReview RAG
APP_VERSION=2.0.0
APP_ENVIRONMENT=development
APP_DEBUG=false
APP_HOST=0.0.0.0
APP_PORT=8501
APP_UPLOAD_DIR=./uploads
APP_MAX_UPLOAD_SIZE=52428800
APP_SESSION_TIMEOUT=3600
APP_MAX_SESSIONS=100

# Database Settings
DB_URL=sqlite:///regulations.db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# LLM Provider Settings
LLM_PRIMARY_PROVIDER=ollama
LLM_PRIMARY_MODEL=llama3.1:8b
LLM_PRIMARY_BASE_URL=http://localhost:11434
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000
LLM_TOP_P=0.9
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=1.0
LLM_REQUESTS_PER_MINUTE=60

# API Keys (REQUIRED - Get these from respective providers)
OLLAMA_API_KEY=your_ollama_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
NVIDIA_API_KEY=your_nvidia_api_key_here

# RAG System Settings
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2
RAG_EMBEDDING_DIMENSION=384
RAG_EMBEDDING_BATCH_SIZE=32
RAG_CHUNK_SIZE=800
RAG_CHUNK_OVERLAP=120
RAG_TOP_K=5
RAG_MIN_SCORE=0.3
RAG_SEARCH_TYPE=hybrid
RAG_VECTOR_STORE_TYPE=faiss
RAG_VECTOR_STORE_PATH=./vector_store
RAG_ENABLE_CACHE=true
RAG_CACHE_TTL=3600

# Cache Settings
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_REDIS_PASSWORD=
CACHE_REDIS_DB=0
CACHE_MAX_MEMORY_CACHE_SIZE=1000
CACHE_MEMORY_CACHE_TTL=1800

# Security Settings
SECURITY_ENABLE_RATE_LIMITING=true
SECURITY_MAX_REQUESTS_PER_MINUTE=60
SECURITY_MAX_FILE_SIZE_MB=50
SECURITY_ALLOWED_FILE_TYPES=pdf,txt,docx
SECURITY_MAX_URL_LENGTH=2048
SECURITY_ALLOWED_ORIGINS=http://localhost:8501,https://*.streamlit.app

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_ENABLE_STRUCTURED_LOGGING=true
LOG_CORRELATION_ID_HEADER=X-Correlation-ID

# Monitoring Settings
MONITORING_SENTRY_DSN=
MONITORING_SENTRY_ENVIRONMENT=development
MONITORING_HEALTH_CHECK_INTERVAL=30
MONITORING_HEALTH_CHECK_TIMEOUT=10
MONITORING_ENABLE_METRICS=true
MONITORING_METRICS_PORT=8000

# Development Settings (only for development environment)
# Uncomment and modify for development
# APP_DEBUG=true
# LOG_LEVEL=DEBUG
# CACHE_ENABLE_CACHE=false
# LLM_PRIMARY_PROVIDER=fallback

# Production Settings (only for production environment)
# Uncomment and modify for production
# APP_DEBUG=false
# LOG_LEVEL=WARNING
# SECURITY_ENABLE_RATE_LIMITING=true
# MONITORING_SENTRY_DSN=your_sentry_dsn_here
# MONITORING_SENTRY_ENVIRONMENT=production
